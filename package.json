{
  "name": "@preconstruct/monorepo",
  "version": "0.0.65",
  "description": "A smart build tool for libraries",
  "scripts": {
    "build": "cd build && yarn preconstruct build",
    "test": "jest",
    "preconstruct": "cd build && yarn preconstruct",
    "postinstall": "manypkg check && cd build && yarn && yarn preconstruct dev",
    "changeset": "changeset",
    "release": "yarn build && changeset publish",
    "start:site": "cd site && yarn start",
    "build:site": "cd site && yarn build"
  },
  "repository": "https://github.com/preconstruct/preconstruct",
  "license": "MIT",
  "workspaces": [
    "packages/*",
    "site"
  ],
  "private": true,
  "resolutions": {
    "**/@babel/parser": "^7.6.4"
  },
  "dependencies": {
    "@babel/cli": "^7.6.4",
    "@babel/core": "^7.6.4",
    "@babel/parser": "^7.6.4",
    "@babel/plugin-proposal-class-properties": "^7.5.5",
    "@babel/plugin-proposal-object-rest-spread": "^7.6.2",
    "@babel/plugin-transform-runtime": "^7.6.2",
    "@babel/preset-env": "^7.6.3",
    "@babel/preset-typescript": "^7.6.0",
    "@changesets/changelog-github": "^0.1.0",
    "@changesets/cli": "^2.0.4",
    "@manypkg/cli": "^0.7.0",
    "@mitchellhamilton/experimental-changesets-auto-release": "^0.0.2",
    "@types/babel__code-frame": "^7.0.1",
    "@types/inquirer": "^6.5.0",
    "@types/jest": "^24.0.18",
    "@types/meow": "^5.0.0",
    "@types/micromatch": "^3.1.0",
    "@types/ms": "^0.7.31",
    "@types/node": "^12.7.12",
    "@types/npm-packlist": "^1.1.1",
    "@types/parse-glob": "^3.0.29",
    "@types/rollup-plugin-json": "^3.0.2",
    "@types/source-map-support": "^0.5.0",
    "@types/terser": "^3.12.0",
    "babel-core": "^7.0.0-bridge.0",
    "babel-eslint": "^10.0.3",
    "babel-jest": "^24.9.0",
    "codecov": "^3.1.0",
    "eslint": "^6.5.1",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-prettier": "^3.0.0",
    "eslint-plugin-react": "^7.13.0",
    "fixturez": "^1.1.0",
    "globby": "^10.0.1",
    "jest": "^24.9.0",
    "jest-in-case": "^1.0.2",
    "jest-junit": "^8.0.0",
    "prettier": "^1.15.3",
    "typescript": "^3.6.3",
    "v8-profiler-next": "^1.1.1"
  },
  "jest": {
    "reporters": [
      "default",
      "jest-junit"
    ]
  },
  "preconstruct": {
    "packages": [
      "packages/*",
      "!packages/craco",
      "!packages/next"
    ]
  }
}
